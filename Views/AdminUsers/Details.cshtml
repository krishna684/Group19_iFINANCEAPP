@model Group19_iFINANCEAPP.Models.UserPassword

@{
    ViewBag.Title = "User Details";
}

<h2 class="mb-4 text-light">User Details</h2>

<div class="card shadow-sm border-0 rounded bg-dark text-light">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <strong class="text-info">ID:</strong>
                <div class="text-white">@Model.ID</div>
            </div>
            <div class="col-md-6">
                <strong class="text-info">Username:</strong>
                <div class="text-white">@Model.UserName</div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong class="text-info">Role:</strong>
                <div>
                    <span class="badge bg-@(Model.Administrator != null ? "primary" : "secondary")">
                        @(Model.Administrator != null ? "Admin" : "User")
                    </span>
                </div>
            </div>
            <div class="col-md-6">
                <strong class="text-info">Password Expiry:</strong>
                <div class="text-white">@Model.PasswordExpiryTime days</div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <strong class="text-info">Account Expiry:</strong>
                <div class="text-white">@Model.UserAccountExpiryDate.ToShortDateString()</div>
            </div>
        </div>

        @if (Model.NonAdminUser != null)
        {
            <h5 class="mt-4 text-warning">Non-Admin Details</h5>
            <hr class="border-secondary" />
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong class="text-info">Full Name:</strong>
                    <div class="text-white">@Model.NonAdminUser.Name</div>
                </div>
                <div class="col-md-6">
                    <strong class="text-info">Email:</strong>
                    <div class="text-white">@Model.NonAdminUser.Email</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <strong class="text-info">Address:</strong>
                    <div class="text-white">@Model.NonAdminUser.Address</div>
                </div>
            </div>
        }

        @if (Model.Administrator != null)
        {
            <h5 class="mt-4 text-warning">Admin Details</h5>
            <hr class="border-secondary" />
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong class="text-info">Name:</strong>
                    <div class="text-white">@Model.Administrator.Name</div>
                </div>
                <div class="col-md-6">
                    <strong class="text-info">Date Hired:</strong>
                    <div class="text-white">@Model.Administrator.DateHired.ToShortDateString()</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong class="text-info">Date Finished:</strong>
                    <div class="text-white">@Model.Administrator.DateFinished?.ToShortDateString() ?? "N/A"</div>
                </div>
            </div>
        }

        <div class="mt-4">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-success me-2" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-light" })
        </div>
    </div>
</div>
