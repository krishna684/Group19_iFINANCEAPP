@model Group19_iFINANCEAPP.Models.UserPassword
@{
    ViewBag.Title = "User Details";
}
<h2>User Details</h2>

<dl class="dl-horizontal">
    <dt>ID</dt>
    <dd>@Model.ID</dd>
    <dt>UserName</dt>
    <dd>@Model.UserName</dd>
    <dt>Role</dt>
    <dd>@(Model.Administrator != null ? "Admin" : "User")</dd>
    <dt>Password Expiry</dt>
    <dd>@Model.PasswordExpiryTime days</dd>
    <dt>Account Expiry</dt>
    <dd>@Model.UserAccountExpiryDate.ToShortDateString()</dd>
</dl>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
