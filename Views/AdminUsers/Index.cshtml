@model IEnumerable<Group19_iFINANCEAPP.Models.UserPassword>

@{
    ViewBag.Title = "All Users";
}

<h2 class="mb-4">All Registered Users</h2>

<!-- Search Bar -->
<div class="form-group mb-4">
    <label for="searchBox" class="form-label">Search Users by Username</label>
    <input type="text" id="searchBox" class="form-control shadow-sm" placeholder="Enter username..." />
</div>

<!-- AJAX Results -->
<div id="userResults">
    @Html.Partial("_UserTable", Model)
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchBox").on("keyup", function () {
                var query = $(this).val();
                $.get("@Url.Action("Search", "AdminUsers")", { searchString: query }, function (data) {
                    $("#userResults").html(data);
                });
            });
        });
    </script>
}
