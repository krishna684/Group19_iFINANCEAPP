@model IEnumerable<Group19_iFINANCEAPP.Models.UserPassword>

<table class="table table-hover table-bordered shadow-sm bg-white rounded">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>UserName</th>
            <th>Role</th>
            <th>Password Expiry</th>
            <th>Account Expiry</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var isAdmin = user.Administrator != null;
            <tr>
                <td>@user.ID</td>
                <td>@user.UserName</td>
                <td>@(isAdmin ? "Admin" : "User")</td>
                <td>@user.PasswordExpiryTime days</td>
                <td>@user.UserAccountExpiryDate.ToShortDateString()</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = user.ID }, new { @class = "btn btn-sm btn-info me-1" }) |
                    @Html.ActionLink("Edit", "Edit", new { id = user.ID }, new { @class = "btn btn-sm btn-warning me-1" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = user.ID }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
