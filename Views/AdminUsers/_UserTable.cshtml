@model IEnumerable<Group19_iFINANCEAPP.Models.UserPassword>

<table class="table table-dark table-striped table-hover rounded shadow-sm overflow-hidden">
    <thead class="table-light text-dark">
        <tr>
            <th>ID</th>
            <th>UserName</th>
            <th>Role</th>
            <th>Password Expiry</th>
            <th>Account Expiry</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var isAdmin = user.Administrator != null;
            <tr>
                <td>@user.ID</td>
                <td>@user.UserName</td>
                <td>
                    <span class="badge bg-@(isAdmin ? "info" : "secondary")">@((isAdmin ? "Admin" : "User"))</span>
                </td>
                <td>@user.PasswordExpiryTime days</td>
                <td>@user.UserAccountExpiryDate.ToShortDateString()</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        @Html.ActionLink("Details", "Details", new { id = user.ID }, new { @class = "btn btn-outline-info" })
                        @Html.ActionLink("Edit", "Edit", new { id = user.ID }, new { @class = "btn btn-outline-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id = user.ID }, new { @class = "btn btn-outline-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
