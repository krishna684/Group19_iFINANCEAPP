@model List<Group19_iFINANCEAPP.Controllers.BalanceSheetEntry>

@{
    ViewBag.Title = "Balance Sheet";
    decimal totalAmount = Model.Sum(x => x.Amount);
}

<h2 class="mb-4">📄 Balance Sheet</h2>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Category</th>
            <th>Type</th>
            <th class="text-end">Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Category</td>
                <td>@item.Type</td>
                <td class="text-end">@item.Amount.ToString("C")</td>
            </tr>
        }
    </tbody>
    <tfoot class="table-light fw-bold">
        <tr>
            <td colspan="2" class="text-end">Total</td>
            <td class="text-end">@totalAmount.ToString("C")</td>
        </tr>
    </tfoot>
</table>

<div class="mt-4 d-flex justify-content-between">
    @Html.ActionLink("← Back to Report Selection", "Index", "GenerateReport", null, new { @class = "btn btn-outline-secondary" })

    <a class="btn btn-primary" href="@Url.Action("BalanceSheetPdf", "GenerateReport")">
        🧾 Export as PDF
    </a>
</div>
