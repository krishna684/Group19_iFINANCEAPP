@{
    ViewBag.Title = "Generate Financial Report";
}

<h2>📊 Generate Financial Report</h2>

@using (Html.BeginForm("Generate", "GenerateReport", FormMethod.Get))
{
    <div class="form-group">
        <label>Select Report:</label>
        <select name="reportType" class="form-select" required>
            <option value="">-- Choose Report --</option>
            <option value="TrialBalance">Trial Balance</option>
            <option value="BalanceSheet">Balance Sheet</option>
        </select>
    </div>

    <div class="row mt-3">
        <div class="col">
            <label>From Date:</label>
            <input type="date" name="fromDate" class="form-control" />
        </div>
        <div class="col">
            <label>To Date:</label>
            <input type="date" name="toDate" class="form-control" />
        </div>
    </div>

    <div class="mt-3 text-end">
        <input type="submit" value="View Report" class="btn btn-primary" />
    </div>
}
