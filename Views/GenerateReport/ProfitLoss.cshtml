@{
    ViewBag.Title = "Profit and Loss Statement";
}

<h2>Profit and Loss Statement</h2>

@if (ViewBag.ProfitLossData != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ProfitLossData)
            {
                <tr>
                    <td>@item.Category</td>
                    <td>@String.Format("{0:C}", item.Amount)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No data available.</p>
}
