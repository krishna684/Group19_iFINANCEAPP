@model IEnumerable<Group19_iFINANCEAPP.Controllers.TrialBalanceEntry>
@{
    ViewBag.Title = "Trial Balance";
}
<h2>Trial Balance</h2>

<table class="table table-bordered">
    <tr>
        <th>Account</th>
        <th>Debit</th>
        <th>Credit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AccountName</td>
            <td>@item.Debit.ToString("C")</td>
            <td>@item.Credit.ToString("C")</td>
        </tr>
    }
</table>
<div class="mt-3 text-end">
    @Html.ActionLink("← Back to Report Selection", "Index", "GenerateReport", null, new { @class = "btn btn-outline-secondary" })
</div>

<a class="btn btn-primary" href="@Url.Action("TrialBalancePdf", "GenerateReport")">
    Export to PDF
</a>

