@model Group19_iFINANCEAPP.Models.MasterAccount

@{
    ViewBag.Title = "Master Account Details";
}

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">📄 Master Account Details</h4>
        </div>
        <div class="card-body">

            <dl class="row mb-0">
                <dt class="col-sm-4">Account ID</dt>
                <dd class="col-sm-8">@Model.ID</dd>

                <dt class="col-sm-4">Account Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Opening Amount</dt>
                <dd class="col-sm-8">@Model.OpeningAmount</dd>

                <dt class="col-sm-4">Closing Amount</dt>
                <dd class="col-sm-8">@Model.ClosingAmount</dd>

                <dt class="col-sm-4">Group ID</dt>
                <dd class="col-sm-8">@Model.GroupID</dd>
            </dl>

        </div>
        <div class="card-footer text-end">
            @Html.ActionLink("← Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
        </div>
    </div>
</div>
