@model Group19_iFINANCEAPP.Models.MasterAccount

@{
    ViewBag.Title = "Edit Master Account";
}

<h2>Edit Master Account</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MasterAccount</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                        @readonly = "readonly",
                        title = "Auto-generated account ID. Cannot be changed."
                    }
                })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                        title = "Edit the name of this master account."
                    }
                })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OpeningAmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OpeningAmount, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                        title = "Update the opening balance for this account."
                    }
                })
                @Html.ValidationMessageFor(model => model.OpeningAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClosingAmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ClosingAmount, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                        title = "Update the closing balance for this account."
                    }
                })
                @Html.ValidationMessageFor(model => model.ClosingAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GroupID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.GroupID,
                    (SelectList)ViewBag.GroupID,
                    "Select Group", new
                         {
                        @class = "form-select",
                        title = "Select the group this account belongs to."
                    })
                @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" title="Save your changes" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ms-2", title = "Back to account list" })
            </div>
        </div>
    </div>
}
