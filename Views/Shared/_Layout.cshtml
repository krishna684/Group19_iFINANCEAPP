<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - iFINANCE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap 5 Bundle -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />

    <style>
        :root {
            --background: #1a1a2e;
            --color: #ffffff;
            --primary-color: #0f3460;
            --card-bg: rgba(255, 255, 255, 0.05);
            --border-color: rgba(255, 255, 255, 0.2);
        }
        .glass-navbar {
            border-radius: 15px !important; /* Adjust to your liking */
        }


        body {
            background-color: var(--background);
            color: var(--color);
            font-family: 'Poppins', sans-serif;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 0.5rem 1.5rem;
            z-index: 1050;
        }

            .navbar .nav-link {
                color: #ffffff !important;
                font-weight: 500;
                transition: all 0.3s ease-in-out;
            }

                .navbar .nav-link:hover {
                    color: #4da3ff !important;
                    text-decoration: underline;
                }

        .navbar-toggler {
            border-color: rgba(255, 255, 255, 0.5);
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='white' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }

        /* Logout button (text-danger in navbar) */
        .navbar-nav .text-danger {
            color: #ff4d4d !important;
            background-color: transparent !important;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            .navbar-nav .text-danger:hover {
                color: #ff6666 !important;
                background-color: rgba(255, 0, 0, 0.1);
            }

        /* Cards and forms */
        .card, .form-control, .form-select, .table, .btn {
            background-color: var(--card-bg);
            color: var(--color);
            border: 1px solid var(--border-color);
            border-radius: 12px;
        }

        .card {
            border-radius: 20px;
        }

        .table thead {
            background-color: rgba(255, 255, 255, 0.08);
        }

        .form-control::placeholder,
        .form-select option {
            color: #ccc;
        }

        .form-control:focus,
        .form-select:focus {
            background-color: rgba(255, 255, 255, 0.08);
            color: #fff;
            box-shadow: 0 0 0 0.25rem rgba(77, 163, 255, 0.25);
        }

        /* Alerts */
        .alert {
            color: #fff;
            background-color: var(--primary-color);
            border-color: #112e4f;
        }

        /* Headings and labels */
        h2.text-primary {
            color: #4da3ff !important;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .form-label {
            color: #d3d3d3;
            font-weight: 500;
        }

        /* Buttons */
        .btn-success {
            background: linear-gradient(135deg, #00c853, #43a047);
            border: none;
            padding: 10px 40px;
            font-weight: 500;
            transition: 0.3s;
        }

            .btn-success:hover {
                background: linear-gradient(135deg, #00a045, #2e7d32);
                box-shadow: 0 0 10px rgba(0, 255, 150, 0.3);
            }

        .btn-outline-secondary {
            background-color: transparent;
            color: #fff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

            .btn-outline-secondary:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }

        /* Select dropdown */
        select.form-select {
            background-color: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: #ffffff;
            border-radius: 10px;
            padding: 8px;
        }

            select.form-select option {
                background-color: #1a1a2e;
                color: #ffffff;
            }

                select.form-select option[disabled] {
                    color: #888 !important;
                }

        /* Page content spacing */
        .body-content {
            padding-bottom: 50px;
        }

        a, .btn-link {
            color: #4da3ff;
        }

        footer {
            color: #888;
        }

        .admin-only {
            gap: 1rem;
            margin-top: 1rem;
        }


    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg glass-navbar shadow-sm rounded-pill mt-3 mx-auto px-4" style="width: fit-content;">
        <div class="container-fluid justify-content-center">
            @Html.ActionLink("iFINANCE", "Index", "Home", null, new { @class = "navbar-brand fw-bold text-uppercase text-light me-5" })

            <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
                <ul class="navbar-nav gap-3 text-center">
                    @if (Session["UserName"] != null)
                    {
                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    }

                    @if (Session["UserRole"]?.ToString() == "Admin")
                    {
                        <li class="nav-item">@Html.ActionLink("Register Users", "Register", "ManageUser", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Manage Users", "Index", "AdminUsers", null, new { @class = "nav-link" })</li>
                    }

                    @if (Session["UserRole"]?.ToString() == "User")
                    {
                        <li class="nav-item">@Html.ActionLink("Account Groups", "Index", "AccountGroups", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Master Accounts", "Index", "MasterAccounts", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Transactions", "Index", "TransactionHeaders", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Reports", "Index", "GenerateReport", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Change Password", "Index", "ChangePassword", null, new { @class = "nav-link" })</li>
                    }

                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                        @if (Session["UserName"] != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-light">
                                    👤 @Session["UserName"] (@Session["UserRole"])
                                </span>
                            </li>
                        }
                    </ul>

                    @if (Session["UserName"] != null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Auth", null, new
                            {
                                @class = "nav-link",
                                style = "color: #ff4d4d !important;"
                            })
                        </li>

                    }
                </ul>

               
            </div>
        </div>
    </nav>



    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
        <footer class="text-center text-muted small">
            <p>&copy; @DateTime.Now.Year - iFINANCE | Group 19</p>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
