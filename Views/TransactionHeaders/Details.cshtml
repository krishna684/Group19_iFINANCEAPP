@model Group19_iFINANCEAPP.Models.TransactionHeader

@{
    ViewBag.Title = "Transaction Details";
}

<h2>📄 Transaction Details</h2>

<div class="card shadow mb-4">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">Transaction Summary</h5>
    </div>
    <div class="card-body">

        <dl class="row">
            <dt class="col-sm-4">Transaction ID</dt>
            <dd class="col-sm-8">@Model.ID</dd>

            <dt class="col-sm-4">Date</dt>
            <dd class="col-sm-8">@Model.Date.ToShortDateString()</dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>
        </dl>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0">Transaction Lines</h5>
    </div>
    <div class="card-body p-0">
        <table class="table table-bordered table-sm mb-0">
            <thead class="table-light">
                <tr>
                    <th>Account</th>
                    <th>Debit</th>
                    <th>Credit</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.TransactionLine)
                {
                    <tr>
                        <td>@line.AccountID</td>
                        <td>@(line.DebitedAmount > 0 ? $"{line.DebitedAmount:C}" : "")</td>
                        <td>@(line.CreditedAmount > 0 ? $"{line.CreditedAmount:C}" : "")</td>
                        <td>@line.Comments</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer text-end">
        @Html.ActionLink("← Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
    </div>
</div>
